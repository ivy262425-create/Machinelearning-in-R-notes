# 1. Collectinng data
teens <- read.csv("E:\\zxy.ntu\\Analytics Solftware\\Individual\\snsdata.csv")
# 2. Exloring and preparing the data
str(teens)
summary(teens)
table(teens$gender)
table(teens$gender, useNA = "ifany")
colSums(is.na(teens))## Notice that gender and age got missing NA values
summary(teens$age)
teens$age <- ifelse(teens$age >= 13 & teens$age < 20, teens$age, NA)
summary(teens$age)
# Data preparation - dummy coding missing values of gender
teens$female <- ifelse(teens$gender == 'F'&
                        !is.na(teens$gender), 1, 0)
teens$no_gender <- ifelse(is.na(teens$gender), 1, 0)
table(teens$gender, useNA ="ifany")
table(teens$female, useNA = "ifany")
table(teens$no_gender, useNA = "ifany")
# Data preparation - imputing the missing values of age
mean(teens$age, na.rm = TRUE)
aggregate(data = teens, age ~ gradyear, mean, na.rm = TRUE) #computes statistics for subgroups of data
ave_age <- ave(teens$age, teens$gradyear, FUN = 
                 function(x) mean(x, na.rm = TRUE))
teens$age <- ifelse(is.na(teens$age), ave_age, teens$age)
summary(teens$age)
# 3. Training a model on the data
library(stats)
interests <- teens[5:40]
# apply the z-score standardization to the data frame
interests_z <- as.data.frame(lapply(interests, scale)) #lapply() returns a matrix
# use the k-means algorithm to divide the data into five clusters
set.seed(2345)
teen_clusters <- kmeans(interests_z, 5)
# 4. Evaluating model performance
teen_clusters$size
teen_clusters$centers
# 5 Improving model performance
teens$cluster <- teen_clusters$cluster # add a column of the cluster assignments
teens[1:5, c("cluster","gender","age","friends")]#examine how the cluster assignment relates to individual characteristics.
aggregate(data = teens, age ~ cluster, mean)
aggregate(data = teens, female ~ cluster, mean)
aggregate(data = teens, friends ~ cluster, mean)

